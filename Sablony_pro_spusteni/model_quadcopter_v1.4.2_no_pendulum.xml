<mujoco model="Model quadcopter_v1.4.2"> <!--v1.4.2=bez zaveseneho zavazi, setrvacnost symetricka a stred hmotnosti posunut-->

	<statistic center="0 0 0.1" extent="0.6" meansize="0.5"/>
	<option timestep ="0.05" density="1.205" viscosity="1.8e-5"/> <!--density[kg/m3] viscosity[kg/(ms)]-->

	<visual>
		<headlight diffuse="0.6 0.6 0.6" ambient="0.5 0.5 0.5" specular="1 1 1"/>
		<rgba haze="0.1 0.2 0.3 1"/>
		<global azimuth="110" elevation="-40" ellipsoidinertia="true"/>
		<map zfar="1000"/>
  	</visual>

	<asset>
		<!--scena-->
		<texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="512"/><!--nÄ›bo-->

		<texture type="2d" name="podlaha_textura" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3" markrgb="0.8 0.8 0.8" width="255" height="255"/>
		<material name="podlaha" texture="podlaha_textura" texuniform="true" texrepeat="3 3" reflectance="0"/><!--podlaha-->

	</asset>

	<worldbody><!--SI units-->
		<!--svetlo a podlaha-->
        <light diffuse="0.7 0.7 0.7" pos="0 0 30" dir="0 0 -1" directional="false"/>
		<geom name="podlaha" type="plane" size="0 0 0.1" material="podlaha"/>

		<!--kvadrokoptera-->
		<body name="kvadrokoptera" pos="0 0 10">
			<joint type="free"/>
			<geom type="box" name="zakladna" size="0.7 0.2 0.1" mass="1" rgba="0.2 0.2 0.2 1"/>
			<geom type="box" name="podvozek" size="0.5 0.2 0.2" mass="0" pos="0 0 -0.3" rgba="0.1 0.1 0.1 1"/>
			<!--hmotnost podvozku 0, aby setrvacnost byla symetricka kolem stredu hmotnosti-->
			<!---->

			<geom type="box" name="predni strana" size="0.1 0.18 0.05" mass="0" pos="0.7 0 0" rgba="0.86 0 1 1"/>
			<site name="IMU+other" type="capsule" size="0.1" rgba="1 1 0 1"/> <!--misto umisteni vsech senzoru-->
			<!--IMU=Inertial measurement unit-->
			<site name="range site" type="capsule" euler="0 180 0" rgba="1 1 0 0"/>

			<body euler="-90 45 0" pos="1 0.5 0">
				<geom type="cylinder" size="0.08 0.5" mass="0.2" rgba="1 0 0 1"/>
				<geom type="cylinder" name="rotor1" pos="0 0 0.5" euler="90 0 0" size="0.5 0.01"   mass="0.25"/>
				<site name="thrust1" pos="0 0 0.5" euler="90 0 0" size="0.04" rgba="0 1 0 1"/>
			</body>

			<body euler="-90 -45 0" pos="1 -0.5 0">
				<geom type="cylinder" size="0.08 0.5" mass="0.2"  rgba="1 0 0 1"/>
				<geom type="cylinder" name="rotor2" pos="0 0 -0.5" euler="90 0 0" size="0.5 0.01"   mass="0.25"/>
				<site name="thrust2" pos="0 0 -0.5" euler="90 0 0" size="0.04" rgba="0 1 0 1"/>
			</body>

			<body euler="-90 45 0" pos="-1 -0.5 0">
				<geom type="cylinder" size="0.08 0.5" mass="0.2"  rgba="1 0 0 1"/>
				<geom type="cylinder" name="rotor3" pos="0 0 -0.5" euler="90 0 0" size="0.5 0.01"   mass="0.25"/>
				<site name="thrust3" pos="0 0 -0.5" euler="90 0 0" size="0.04" rgba="0 1 0 1"/>
			</body>

			<body euler="-90 -45 0" pos="-1 0.5 0">
				<geom type="cylinder" size="0.08 0.5" mass="0.2"  rgba="1 0 0 1"/>
				<geom type="cylinder" name="rotor4" pos="0 0 0.5" euler="90 0 0" size="0.5 0.01"   mass="0.25"/>
				<site name="thrust4" pos="0 0 0.5" euler="90 0 0" size="0.04" rgba="0 1 0 1"/>
			</body>


<!--			zavazi, ktere je jako podrizene telo, ale neni jako predchozi body-->
<!--			<body name="pendulum" pos="0 0 0" euler="0 10 0">-->
<!--				<joint type="hinge" axis="0 1 0" name="spojeni_lano"/>-->

<!--				<geom type="cylinder" name="lano" pos="0 0 -2.5" size="0.05 2.5" mass="0" rgba="0.58 0.29 0 1"/>-->
<!--				<geom name="zavazi" type="sphere" size="0.5" pos="0 0 -5" mass="0.5" rgba="0 0.5 0.1 1"/>-->
<!--			</body>-->

		</body>
	</worldbody>

	<sensor>
		<!--lze cist v kodu z mjData.sensordata-->
		<accelerometer name="akcelerometr" site="IMU+other"/> <!--3 outputs-->
		<velocimeter name="mereni rychlosti" site="IMU+other"/> <!--3 outputs-->
		<gyro name="gyroskop" site="IMU+other"/> <!--3 outputs-->
		<force name="senzor sily" site="IMU+other"/> <!--3 outputs-->
		<torque name="senzor momentu" site="IMU+other"/> <!--3 outputs-->
<!--		<rangefinder  name="senzor vzdalenosti" site="range site" cutoff="10"/> &lt;!&ndash;1 output&ndash;&gt;-->
		<!--rangefinder meri podel Z+ site, takze musel jsem smerovat site osou Z+ dolu, aby meril vzalenost do plane-->

		<!--testove senzory na aktuatoru-->
<!--		<actuatorpos name="senzor delky aktuatoru" actuator="motor1"/>-->
<!--		<actuatorvel name="senzor rychlosti aktuatoru" actuator="motor1"/> &lt;!&ndash;neni to, co jsem si myslel&ndash;&gt;-->
<!--		<actuatorfrc name="senzor sily aktuatoru" actuator="motor1"/>-->
	</sensor>

	<actuator>
<!--		<motor name="motor1" site="thrust1" gear="0 0 1 0 0 1" ctrlrange="0 10"/> &lt;!&ndash;CCW&ndash;&gt;-->
<!--		<motor name="motor2" site="thrust2" gear="0 0 1 0 0 -1" ctrlrange="0 10"/> &lt;!&ndash;CW&ndash;&gt;-->
<!--		<motor name="motor3" site="thrust3" gear="0 0 1 0 0 1" ctrlrange="0 10"/> &lt;!&ndash;CCW&ndash;&gt;-->
<!--		<motor name="motor4" site="thrust4" gear="0 0 1 0 0 -1" ctrlrange="0 10"/> &lt;!&ndash;CW&ndash;&gt;-->

		<motor name="motor1" site="thrust1" gear="0 0 1 0 0 1"/> <!--CCW-->
		<motor name="motor2" site="thrust2" gear="0 0 1 0 0 -1"/> <!--CW-->
		<motor name="motor3" site="thrust3" gear="0 0 1 0 0 1"/> <!--CCW-->
		<motor name="motor4" site="thrust4" gear="0 0 1 0 0 -1"/> <!--CW-->
	</actuator>

</mujoco>
