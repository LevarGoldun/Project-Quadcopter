<!-- Symetricky model, tvar X, bez odporu prostredi-->
<mujoco model="Model quadcopter_v2">
	<statistic meansize="0.1"/>
	<option timestep ="0.05" density="0" viscosity="0"/> <!-- density="1.205" viscosity="1.8e-5" density[kg/m3] viscosity[kg/(ms)]-->

	<visual>
		<headlight diffuse="0.6 0.6 0.6" ambient="0.5 0.5 0.5" specular="1 1 1"/>
		<rgba haze="0.1 0.2 0.3 1"/>
		<global azimuth="110" elevation="-40" ellipsoidinertia="true"/>
		<map zfar="1000"/>
  	</visual>

	<asset>
		<!--scena-->
		<texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="512"/><!--nÄ›bo-->

		<texture type="2d" name="podlaha_textura" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3" markrgb="0.8 0.8 0.8" width="255" height="255"/>
		<material name="floor" texture="podlaha_textura" texuniform="true" texrepeat="3 3" reflectance="0"/><!--podlaha-->
	</asset>

	<worldbody><!--SI units-->
		<!--svetlo a podlaha-->
        <light diffuse="0.7 0.7 0.7" pos="0 0 30" dir="0 0 -1" directional="false"/>
		<geom name="floor" type="plane" size="0 0 0.1" material="floor"/>

		<!--kvadrokoptera-->
		<body name="quadcopter" pos="0 0 2">
			<joint type="free"/>
			<geom type="cylinder" name="zakladna" size="0.08 0.05" mass="0.8" rgba="0.2 0.2 0.2 1"/>
			<geom type="box" name="pred" size="0.1 0.025 0.025" mass="0" pos="0.08 0 0" rgba="0.86 0 1 1"/>
			<site name="IMU+other" type="capsule" size="0.04" rgba="1 1 0 1"/> <!--misto umisteni vsech senzoru-->
			<!--IMU=Inertial measurement unit-->

			<body euler="-90 45 0"> <!-- rotor1 - rotor3-->
				<geom type="cylinder" size="0.01 0.29" mass="0.55" rgba="1 0 0 1"/>

				<geom type="cylinder" name="rotor1" pos="0 0 0.29" euler="90 0 0" size="0.15 0.01" mass="0.025"/>
				<site name="thrust1" pos="0 0 0.29" euler="90 0 0" size="0.02" rgba="0 1 0 1"/>

				<geom type="cylinder" name="rotor3" pos="0 0 -0.29" euler="90 0 0" size="0.15 0.01" mass="0.025"/>
				<site name="thrust3" pos="0 0 -0.29" euler="90 0 0" size="0.02" rgba="0 1 0 1"/>
			</body>

			<body euler="-90 -45 0"> <!-- rotor2 - rotor4-->
				<geom type="cylinder" size="0.01 0.29" mass="0.55" rgba="1 0 0 1"/>

				<geom type="cylinder" name="rotor2" pos="0 0 -0.29" euler="90 0 0" size="0.15 0.01" mass="0.025"/>
				<site name="thrust2" pos="0 0 -0.29" euler="90 0 0" size="0.02" rgba="0 1 0 1"/>

				<geom type="cylinder" name="rotor4" pos="0 0 0.29" euler="90 0 0" size="0.15 0.01" mass="0.025"/>
				<site name="thrust4" pos="0 0 0.29" euler="90 0 0" size="0.02" rgba="0 1 0 1"/>
			</body>

			<!--load-->
			<body name="pendulum" pos="0 0 0" euler="0 0 0">
				<joint type="ball" name="spojeni_lano"/>
				<geom type="cylinder" name="lano" pos="0 0 -0.5" size="0.008 0.5" mass="0" rgba="0.58 0.29 0 1"/>

				<geom name="load" type="sphere" size="0.08" pos="0 0 -1" mass="0" rgba="0 0.5 0.1 1"/> <!--skorepina-->
				<geom name="point_mass" type="sphere" size="0.001" pos="0 0 -1" mass="1" rgba="0 0.5 0.1 1"/> <!--point mass-->
			</body>
		</body>
	</worldbody>

	<sensor>
		<!--lze cist v kodu z mjData.sensordata-->
		<accelerometer name="akcelerometr" site="IMU+other"/> <!--3 outputs-->
		<velocimeter name="mereni rychlosti" site="IMU+other"/> <!--3 outputs-->
		<gyro name="gyroskop" site="IMU+other"/> <!--3 outputs-->
		<force name="senzor sily" site="IMU+other"/> <!--3 outputs-->
		<torque name="senzor momentu" site="IMU+other"/> <!--3 outputs-->

		<!--testove senzory na aktuatoru-->
<!--		<actuatorpos name="senzor delky aktuatoru" actuator="motor1"/>-->
<!--		<actuatorvel name="senzor rychlosti aktuatoru" actuator="motor1"/> &lt;!&ndash;neni to, co jsem si myslel&ndash;&gt;-->
<!--		<actuatorfrc name="senzor sily aktuatoru" actuator="motor1"/>-->
	</sensor>

	<actuator>
<!--		<motor name="motor1" site="thrust1" gear="0 0 1 0 0 1" ctrlrange="0 10"/> &lt;!&ndash;CCW&ndash;&gt;-->
<!--		<motor name="motor2" site="thrust2" gear="0 0 1 0 0 -1" ctrlrange="0 10"/> &lt;!&ndash;CW&ndash;&gt;-->
<!--		<motor name="motor3" site="thrust3" gear="0 0 1 0 0 1" ctrlrange="0 10"/> &lt;!&ndash;CCW&ndash;&gt;-->
<!--		<motor name="motor4" site="thrust4" gear="0 0 1 0 0 -1" ctrlrange="0 10"/> &lt;!&ndash;CW&ndash;&gt;-->

		<motor name="motor1" site="thrust1" gear="0 0 1 0 0 1" ctrlrange="0 4"/> <!--CCW-->
		<motor name="motor2" site="thrust2" gear="0 0 1 0 0 -1" ctrlrange="0 4"/> <!--CW-->
		<motor name="motor3" site="thrust3" gear="0 0 1 0 0 1" ctrlrange="0 4"/> <!--CCW-->
		<motor name="motor4" site="thrust4" gear="0 0 1 0 0 -1" ctrlrange="0 4"/> <!--CW-->
	</actuator>

</mujoco>
