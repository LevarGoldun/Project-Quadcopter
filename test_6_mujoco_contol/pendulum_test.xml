<mujoco model="Pendulum">
	<statistic center="0 0 0.1" extent="0.6" meansize="0.5"/>
	<option timestep ="0.001" density="1.205" viscosity="1.8e-5"/> <!--density[kg/m3] viscosity[m2/s]-->

	<visual>
		<headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0"/>
		<rgba haze="0.15 0.25 0.35 1"/>
		<global azimuth="110" elevation="-40" ellipsoidinertia="true"/>
  	</visual>

	<asset>
		<!--scena-->
		<texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="512"/><!--nebo-->

		<texture type="2d" name="podlaha_textura" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3" markrgb="0.8 0.8 0.8" width="255" height="255"/>
		<material name="podlaha" texture="podlaha_textura" texuniform="true" texrepeat="3 3" reflectance="0"/><!--podlaha-->

	</asset>

	<worldbody>
        <!--svetlo a podlaha-->
        <light diffuse="0.6 0.6 0.6" pos="0 0 3" dir="0 0 -1" directional="true"/>
		<geom name="podlaha" type="plane" size="0 0 0.1" material="podlaha"/>

		<!--kyvadlo-->
		<body pos="0 0 2" euler="0 0 0">
			<geom type="cylinder" size="0.05 1" mass="0" rgba="1 1 0 1"/>
			<geom type="sphere" pos="0 0 -1" mass="2" size="0.2" rgba="1 0 0 1" name="kulicka"/>

			<joint name="joint0" type="hinge" axis="1 0 0" pos="0 0 1"/> <!--prvke pro rotaci-->

			<site name="misto_imisteni_senzoru" pos="0 0 -1" size="0.05"/>
			<site name="misto_imisteni_dalkomeru" pos="0 0 -1" euler="0 180 0" size="0.05"/>
		</body>
	</worldbody>

	<sensor>
		<!--lze cist v kodu z mjData.sensordata-->
		<touch name="kontaktny_senzor" site="misto_imisteni_senzoru"/> <!--1 output-->
		<accelerometer name="akcelerometr" site="misto_imisteni_senzoru"/> <!--3 outputs-->
		<velocimeter name="mereni_rychlosti" site="misto_imisteni_senzoru"/> <!--3 outputs-->
		<gyro name="gyroskop" site="misto_imisteni_senzoru"/> <!--3 outputs-->
		<force name="senzor_sily" site="misto_imisteni_senzoru"/> <!--3 outputs-->
		<torque name="senzor_momentu" site="misto_imisteni_senzoru"/> <!--3 outputs-->

		<rangefinder  name="senzor_vzdalenosti" site="misto_imisteni_dalkomeru" cutoff="10"/> <!--1 output-->
		<!--rangefinder meri podel Z+ site, takze musel jsem smerovat site osou Z+ dolu, aby meril vzalenost do plane-->

	</sensor>

</mujoco>
