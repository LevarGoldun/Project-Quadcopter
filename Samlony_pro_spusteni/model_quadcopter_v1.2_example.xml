<mujoco model="Model quadcopter_v1.2"> <!--v1.2=vetsi podlaha-->
	<statistic center="0 0 0.1" extent="0.6" meansize="0.5"/>
	<option timestep ="0.001" density="1.205" viscosity="1.8e-5"/> <!--density[kg/m3] viscosity[m2/s]-->

	<visual>
		<headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0"/>
		<rgba haze="0.15 0.25 0.35 1"/>
		<global azimuth="110" elevation="-40" ellipsoidinertia="true"/>
  	</visual>

	<asset>
		<!--scena-->
		<texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="512"/><!--nebo-->

		<texture type="2d" name="podlaha_textura" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3" markrgb="0.8 0.8 0.8" width="255" height="255"/>
		<material name="podlaha" texture="podlaha_textura" texuniform="true" texrepeat="3 3" reflectance="0"/><!--podlaha-->

	</asset>

	<worldbody><!--SI units-->
		<!--svetlo a podlaha-->
        <light diffuse="0.6 0.6 0.6" pos="0 0 3" dir="0 0 -1" directional="true"/>
		<geom name="podlaha" type="plane" size="0 0 0.1" material="podlaha"/>

		<!--kvadrokoptera-->
		<body name="kvadrokoptera" pos="0 0 3">
			<joint type="free"/>
			<geom type="box" name="zakladna" size="0.7 0.2 0.1" mass="0.5" rgba="0.2 0.2 0.2 1"/>
			<geom type="box" size="0.5 0.2 0.2" mass="1" pos="0 0 -0.3" rgba="0.1 0.1 0.1 1"/>

			<body euler="-90 45 0" pos="1 0.5 0">
				<geom type="cylinder" size="0.08 0.5" mass="0.2" rgba="1 0 0 1"/>
				<geom type="cylinder" name="rotor1" pos="0 0 0.5" euler="90 0 0" size="0.5 0.01"   mass="0.25"/>
				<site name="thrust1" pos="0 0 0.5" euler="90 0 0" size="0.04" rgba="0 1 0 1"/>
			</body>

			<body euler="-90 -45 0" pos="1 -0.5 0">
				<geom type="cylinder" size="0.08 0.5" mass="0.2"  rgba="1 0 0 1"/>
				<geom type="cylinder" name="rotor2" pos="0 0 -0.5" euler="90 0 0" size="0.5 0.01"   mass="0.25"/>
				<site name="thrust2" pos="0 0 -0.5" euler="90 0 0" size="0.04" rgba="0 1 0 1"/>
			</body>

			<body euler="-90 -45 0" pos="-1 0.5 0">
				<geom type="cylinder" size="0.08 0.5" mass="0.2"  rgba="1 0 0 1"/>
				<geom type="cylinder" name="rotor3" pos="0 0 0.5" euler="90 0 0" size="0.5 0.01"   mass="0.25"/>
				<site name="thrust3" pos="0 0 0.5" euler="90 0 0" size="0.04" rgba="0 1 0 1"/>
			</body>

			<body euler="-90 45 0" pos="-1 -0.5 0">
				<geom type="cylinder" size="0.08 0.5" mass="0.2"  rgba="1 0 0 1"/>
				<geom type="cylinder" name="rotor4" pos="0 0 -0.5" euler="90 0 0" size="0.5 0.01"   mass="0.25"/>
				<site name="thrust4" pos="0 0 -0.5" euler="90 0 0" size="0.04" rgba="0 1 0 1"/>
			</body>
		</body>
	</worldbody>

	<actuator>
		<motor name="thrust1" site="thrust1" gear="0 0 1 0 0 1" ctrlrange="0 10"/>
		<motor name="thrust2" site="thrust2" gear="0 0 1 0 0 -1" ctrlrange="0 10"/>
		<motor name="thrust3" site="thrust3" gear="0 0 1 0 0 -1" ctrlrange="0 10"/>
		<motor name="thrust4" site="thrust4" gear="0 0 1 0 0 1" ctrlrange="0 10"/>
	</actuator>

</mujoco>
